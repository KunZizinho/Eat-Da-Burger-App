<h1>Burgers!</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block hungry=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-4">
            <h3>Eat Da Burger!</h3>
        </div>

        <div class="col-md-4">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>